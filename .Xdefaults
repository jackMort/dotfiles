! autor: Lech Twar√≥g
!  rxvt-unicode

URxvt.termName          : rxvt-256color
URxvt*urgentOnBell      : true
URxvt*visualBell        : true
URxvt*skipBuiltinGlyphs : true
URxvt*borderless        : true
URxvt*scrollBar         : false
URxvt*saveLines         : 6600 
URxvt.buffered          :  true
URxvt.shading           : 40
URxvt*transparent       : True 
 
! put it in ~/.urxvt/
URxvt.perl-lib: .urxvt/
URxvt.perl-ext-common: default,matcher,tabbed

URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1 
URxvt*urlLauncher       : /usr/bin/chromium  
urxvt*matcher.button    : 1

URxvt*geometry: 140x30

!FONTS 
   
!URxvt*font:              -*-terminusmod-medium-r-normal-*-12-*-*-*-*-*-*-*
!URxvt*boldFont:          -*-terminusmod-bold-r-normal-*-12-*-*-*-*-*-*-*
 
URxvt*font: xft:Monospace:pixelsize=10
!URxvt*font: xft:Bitstream Vera Sans Mono:style=Regular:pixelsize=9  
!URxvt*font:     -xos4-terminus-medium-*-*-*-12-*-*-*-*-*-iso8859-2
!URxvt*boldFont: -xos4-terminus-bold-*-*-*-12-*-*-*-*-*-iso8859-2
URxvt*font: -*-terminus-medium-r-*-*-14-*-*-*-*-*-*-u
URxvt*font: xft:Terminus:style=Regular:pixelsize=12.5:antialias=true
 
!Xft settings 

Xft.dpi:          96
Xft.antialias:    true
Xft.rgba:         rgb
Xft.hinting:      true
Xft.hintstyle:    hintslight
Xft.lcdfilter:    lcddefault 

urxvt*background:  #1A1A1A
urxvt*foreground:  #DDDDFF
! Powerarrow Darker

*.background: #1A1A1A
*.foreground: #DDDDFF

!black
*color0: #1A1A1A
